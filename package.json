{
  "name": "front-end-boilerplate",
  "version": "1.0.0",
  "main": "scripts/index.ts",
  "repository": "git@github.com.bylegal:attivita/front-end-boilerplate.git",
  "author": "kota <k.ichikawa@attivita.co.jp>",
  "license": "MIT",
  "scripts": {
    "start": "yarn local",
    "local": "cross-env NODE_ENV=local ts-node scripts/index.ts",
    "build": "rimraf ./production && cross-env NODE_ENV=production ts-node scripts/index.ts",
    "debug": "browser-sync start -s 'production'",
    "tsc": "tsc --noEmit",
    "lint:template": "pug-lint -c .pug-lint.json .",
    "lint:style": "stylelint --ignore-path .stylelintignore \"**/*.scss\"",
    "lint:style:fix": "stylelint --fix --ignore-path .stylelintignore \"**/*.scss\"",
    "lint:script": "eslint --ext .ts --ignore-path .eslintignore src/**/*.ts",
    "lint:script:fix": "eslint --fix --ext .ts --ignore-path .eslintignore src/**/*.ts",
    "format": "prettier 'src/**/*.{js,ts,json}'",
    "format:fix": "prettier --write 'src/**/*.{js,ts,json}'",
    "sys:dev": "cross-env NODE_ENV=local ts-node-dev --respawn scripts/index.ts",
    "sys:format": "prettier 'scripts/**/*.{js,ts,json}'",
    "sys:format:fix": "prettier --write 'scripts/**/*.{js,ts,json}'",
    "sys:lint": "eslint scripts/**/*.ts",
    "sys:lint:fix": "eslint scripts/**/*.ts --fix",
    "fix": "yarn format:fix && yarn lint:style:fix && yarn lint:script:fix && yarn sys:format:fix && yarn sys:lint:fix",
    "ci:check": "yarn tsc && yarn format && yarn lint:template && yarn lint:style && yarn lint:script",
    "ci:sys:check": "yarn sys:format && yarn sys:lint"
  },
  "devDependencies": {
    "@babel/plugin-transform-runtime": "^7.15.8",
    "@babel/preset-env": "^7.15.8",
    "@babel/preset-es2015": "^7.0.0-beta.53",
    "@babel/register": "^7.15.3",
    "@babel/runtime": "^7.15.4",
    "@types/browser-sync": "^2.26.2",
    "@types/css-declaration-sorter": "^6.0.1",
    "@types/cssnano": "^4.0.1",
    "@types/glob": "^7.2.0",
    "@types/imagemin": "^8.0.0",
    "@types/imagemin-gifsicle": "^7.0.1",
    "@types/imagemin-mozjpeg": "^8.0.1",
    "@types/imagemin-svgo": "^10.0.0",
    "@types/mkdirp": "^1.0.2",
    "@types/node": "^18.7.14",
    "@types/node-sass": "^4.11.3",
    "@types/postcss-calc": "^8.2.0",
    "@types/postcss-reporter": "^7.0.1",
    "@types/pug": "^2.0.6",
    "@types/webpack-dev-middleware": "^5.0.2",
    "@typescript-eslint/eslint-plugin": "^5.1.0",
    "@typescript-eslint/parser": "^5.1.0",
    "autoprefixer": "^10.3.7",
    "babel": "^6.23.0",
    "babel-core": "^6.26.3",
    "babel-eslint": "^10.1.0",
    "babel-loader": "^8.2.3",
    "browser-sync": "^2.27.5",
    "chalk": "^4.1.2",
    "child_process": "^1.0.2",
    "chokidar": "^3.5.3",
    "cross-env": "^7.0.3",
    "css-declaration-sorter": "^6.1.3",
    "cssnano": "^5.0.9",
    "eslint": "^8.23.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint-webpack-plugin": "^3.2.0",
    "formatter": "^0.4.1",
    "glob": "^8.0.3",
    "imagemin": "^7.0.1",
    "imagemin-gifsicle": "^7.0.0",
    "imagemin-mozjpeg": "^9.0.0",
    "imagemin-pngquant": "^9.0.2",
    "imagemin-svgo": "7.1.0",
    "mkdirp": "^1.0.4",
    "node-sass": "^7.0.1",
    "postcss": "^8.4.16",
    "postcss-nested": "^5.0.6",
    "postcss-reporter": "^7.0.5",
    "postcss-scss": "^4.0.4",
    "prettier": "^2.7.1",
    "pug": "^3.0.2",
    "pug-lint": "^2.6.0",
    "puglint-stylish": "^1.1.0",
    "stylelint": "^14.11.0",
    "stylelint-config-prettier": "^9.0.3",
    "stylelint-config-recommended-scss": "^5.0.0",
    "stylelint-config-standard": "^23.0.0",
    "stylelint-scss": "^4.3.0",
    "terser-webpack-plugin": "^5.3.6",
    "ts-loader": "^9.2.6",
    "ts-node": "^10.4.0",
    "ts-node-dev": "^1.1.8",
    "typescript": "^4.4.4",
    "webpack": "^5.59.1",
    "webpack-dev-middleware": "^5.2.1",
    "webpack-dev-server": "^4.3.1"
  },
  "dependencies": {
    "gsap": "^3.8.0"
  }
}
